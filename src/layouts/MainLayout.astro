---
//styles import
import "../styles/global.css"
//components import
import Header from "../components/pageParts/Header.astro";

interface Props{
	title: string,
	showHeader?: boolean,
}

const { title, showHeader = true} = Astro.props as Props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
	{ showHeader && (
		<header class="w-full">
			<Header/>
		</header>
		)
	}
		<main>
			<slot />
		</main>
	</body>
</html>
